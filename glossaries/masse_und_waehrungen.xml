      <entry>
        <def>pied prussien</def>
        <def>siehe <ref target="#fuss_pr">Fuß, preußischer</ref></def>
      </entry>
      <entry>
        <def>piede parigino</def>
        <def>siehe <ref target="#fuss_pa">Fuß, Pariser</ref></def>
      </entry>
      <entry>
        <form>Pint</form>
        <def>englische Volumeneinheit</def>
        <def>ca. <measure type="volume">0,501 l</measure></def>
      </entry>
      <entry>
        <form>Pouce</form>
        <def>siehe <ref target="#zoll_fr">Zoll, französischer</ref></def>
      </entry>
      <entry>
        <form>Pud (пуд)</form>
        <def>russische Masseeinheit</def>
