                        <row>
                            <cell>
                                <placeName key="canopus">Canopus</placeName> ... 98.</cell>
                            <cell>
                                <placeName key="alphaindi">&#x03B1; De l&#x2019;Indien</placeName>. 50.</cell>
                            <cell>
                                <placeName key="alphapavonis">&#x03B1; du Paon</placeName> ... 78.</cell>
                            <cell>8 .......... 58.</cell>
                        </row>
                        <lb break="yes"/>
                        <row>
                            <cell>
                                <placeName key="alphacentauri">&#x03B1; du Centaure</placeName>. 96.</cell>
                            <cell>
                                <placeName key="zetaindi">&#x03B6;</placeName> ........... 47.</cell>
                            <cell>
                                <placeName key="alphagruis">&#x03B1; De la Grue</placeName>. 81.</cell>
                            <cell>
                                <placeName key="alphatucanae">&#x03B1; Du Toucan</placeName>. 70.</cell>
                        </row>
